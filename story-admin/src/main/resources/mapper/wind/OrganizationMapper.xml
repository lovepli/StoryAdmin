<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.story.storyadmin.mapper.wind.OrganizationMapper">

    <resultMap id="BaseResultMap" type="com.story.storyadmin.domain.entity.wind.Organization">
        <!-- 树形基础模块 -->
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="VARCHAR"/>
        <result column="parent_ids" property="parentIds" jdbcType="VARCHAR"/>
        <result column="hasChildren" property="hasChildren"/>

        <!-- 扩展模块 -->
        <result column="remarks" property="remarks" jdbcType="VARCHAR"/>

    </resultMap>

    <sql id="Base_Column_List">
		t.id,
		t.name,
		t.parent_id,
		t.parent_ids,
		t.parent_id AS parent_id,
		p.name AS parent_name,
		t.remarks,
		(select count(*) from test_organization s
		WHERE s.parent_id=t.id) as
		hasChildren
	</sql>

    <sql id="parentJoins">
		LEFT JOIN test_organization p ON p.id = t.parent_id
	</sql>

    <select id="selectByTreeId" resultMap="BaseResultMap"
            parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from test_organization t
        <include refid="parentJoins"/>
        where t.id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="selectTreeList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from test_organization t
        <include refid="parentJoins"/>
        <where>
            ${ew.sqlSegment}
        </where>
    </select>

    <!-- 通过用户ID组织机构 -->
    <select id="findListByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from test_organization t
        <include refid="parentJoins"/>
        LEFT JOIN test_user_organization uo on t.id=uo.organization_id
        WHERE uo.user_id=
        #{userId}
    </select>

    <!-- 更新子树 -->
    <update id="updateSunTreeParentIds">
        update test_organization set parent_ids=
        CONCAT(#{newParentIds},
        substring(parent_ids, length(#{oldParentIds})+1,length(parent_ids)+1))
<!--        <if test="_databaseId == 'mysql'">-->
<!--            substring(parent_ids, length(#{oldParentIds})+1,length(parent_ids)+1))-->
<!--        </if>-->
<!--        <if test="_databaseId == 'oracle'">-->
<!--            substr(parent_ids, length(#{oldParentIds})+1,length(parent_ids)+1))-->
<!--        </if>-->
<!--        <if test="_databaseId == 'sqlServer'">-->
<!--            substring(parent_ids, len(#{oldParentIds})+1,len(parent_ids)+1))-->
<!--        </if>-->
        where parent_ids like concat(#{oldParentIds}, '%')
    </update>
    <!-- 删除子树 -->
    <delete id="deleteSunTree" parameterType="java.lang.String">
		delete from test_organization
		where parent_ids like concat(#{oldParentIds}, '%')
	</delete>

</mapper>
